<h3>
    <a class="btn btn-secondary" href="/addOrEdit"><i class="fa fa-plus"></i> Create New</a>
    User List
</h3>

<head>
    {{{headContent}}}
</head>
<table class="table table-striped">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Password</th>
        <th></th>
    </tr>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.password}}</td>
            <td>
                <a href="/user/{{this._id}}"><i class="fa fa-pencil mr-2"></i></a>
                <a href="/user/delete/{{this._id}}"
                    onclick="return confirm('Are you sure about removing this user record?')"><i
                        class="text-danger fa fa-trash"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>